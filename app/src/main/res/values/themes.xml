<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Covid19statisticsapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryVariant">@color/toolbar_background</item>
        <item name="colorOnPrimary">@color/toolbar_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/toolbar_background</item>
        <item name="colorSecondaryVariant">@color/toolbar_background</item>
        <item name="colorOnSecondary">@color/toolbar_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Covid19statisticsapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Covid19statisticsapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Covid19statisticsapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- this is new -->
        <item name="colorAccent">@color/app_background</item>

        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:colorAccent">@color/app_background</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/app_background</item>
        <item name="android:dayOfWeekBackground">@color/app_background</item>
        <item name="android:yearListSelectorColor">@color/app_background</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:minDate">01/01/2020</item>
    </style>
</resources>