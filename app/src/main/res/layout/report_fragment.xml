<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ui.views.ReportsFragment"
    >


    <com.ruben.covid_19_statistics_app.uicomponents.networkError.ErrorLayout
        android:id="@+id/report_fragment_error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/province_fragment_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/progress_bar"
        android:visibility="gone"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/report_fragment_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/report_fragment_header_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/report_fragment_province_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:text="Anhui"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <!-- Maybe not implemented in the first version -->
            <TextView
                android:id="@+id/report_fragment_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="2020-11-25 05:27:20"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/report_fragment_province_name"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/report_fragment_star_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_star_not_selected"
                android:visibility="gone"/>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/report_fragment_info_wrapper"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/report_fragment_header_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/report_fragment_data_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:text="@string/data_from"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/report_fragment_calendar_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_calendar" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:labelFor="@id/report_fragment_confirmed_cases"
                    android:text="@string/confirmed"
                    android:textSize="23dp"
                    android:textColor="@color/blue"
                    android:drawableLeft="@drawable/point_circle"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/blue"
                    />

                <TextView
                    android:id="@+id/report_fragment_confirmed_cases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="30dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:labelFor="@id/report_fragment_confirmed_cases"
                    android:text="@string/deaths"
                    android:textSize="23dp"
                    android:textColor="@color/red"
                    android:drawableTint="@color/red"
                    android:drawableLeft="@drawable/point_circle"
                    android:drawablePadding="10dp"/>

                <TextView
                    android:id="@+id/report_fragment_total_deaths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="30dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:labelFor="@id/report_fragment_confirmed_cases"
                    android:text="@string/recovered"
                    android:textSize="23dp"
                    android:textColor="@color/green"
                    android:drawableLeft="@drawable/point_circle"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/green"
                    />

                <TextView
                    android:id="@+id/report_fragment_recovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="30dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/report_fragment_see_more_data_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@string/see_more_data"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textStyle="italic"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/report_fragment_maps_title"
            app:layout_constraintTop_toBottomOf="@id/report_fragment_info_wrapper"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="@string/ubication"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/report_fragment_maps_title"
            android:background="@drawable/map_shape"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp">

            <com.google.android.gms.maps.MapView
                android:id="@+id/report_fragment_map_view"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:visibility="gone"
                />

            <include
                android:id="@+id/report_fragment_map_load_error_layout"
                layout="@layout/google_maps_load_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/available_in_future_versions_pop_up"
        layout="@layout/not_available_function_yet_pop_up"
        android:visibility="visible"
        />

</FrameLayout>